<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Gestion Bénévolat{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <nav style="text-align:center; margin: 20px 0;">
        <a href="{{ path('app_mission_index') }}" class="btn btn-primary">Missions</a>
        <a href="{{ path('app_candidature_mes') }}" class="btn btn-success">Mes candidatures</a>
    </nav>

    <div class="container">
        {% block body %}{% endblock %}
    </div>
</body>
</html>
