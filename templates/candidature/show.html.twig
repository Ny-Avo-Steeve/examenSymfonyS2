{% extends 'base.html.twig' %}

{% block title %}Mes candidatures{% endblock %}

{% block body %}
<h1>Mes candidatures</h1>

<form method="get" style="text-align:center; margin-bottom:20px;">
    <input type="email" name="email" placeholder="Votre email" value="{{ email }}">
    <button class="btn btn-primary">Rechercher</button>
</form>

<table>
    <thead>
        <tr>
            <th>Mission</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Statut</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for c in candidatures %}
            <tr>
                <td>{{ c.mission.titre }}</td>
                <td>{{ c.nom }}</td>
                <td>{{ c.email }}</td>
                <td>{{ c.statut }}</td>
                <td>
                    <form action="{{ path('app_candidature_delete', {'id': c.id}) }}" method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ c.id) }}">
                        <button class="btn btn-danger" type="submit">Annuler</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">Aucune candidature trouv√©e.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
